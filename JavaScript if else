let raceNumber = Math.floor(Math.random() * 1000);

const registeredEarly = true;
const runnersAge = 25;

if(registeredEarly && runnersAge > 18){
  raceNumber += 1000;
}
if(registeredEarly && runnersAge > 18){
  console.log(`You will race at 9:30am and your race number will be ${raceNumber}.`);
} else if(!registeredEarly && runnersAge > 18){
  console.log(`You will race at 11:00am and your number will be ${raceNumber}.`);
} else if(runnersAge < 18){
  console.log(`You will race at 12:30pm and your number will be ${raceNumber}.`);
} else{
  console.log('Please approach the registration desk.');
}
